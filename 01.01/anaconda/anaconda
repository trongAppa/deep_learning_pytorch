conda update -n base conda
conda update --all

tensorFlow
conda create -n tf python=3.9

conda env remove -n tf

-- 활성화
conda deactivate

-- 비활성화
conda activate tf

-- intel GPU일 경우 해당 환경 설치 필요
-- Tensorflow 가상환경에 설치 (cpu라고 되어 있지만 gpu 작동 전에 꼭 필요한 절차)
pip install tensorflow-cpu==2.10

-- Tensorflow Directml Plugin 하기
pip install tensorflow-directml-plugin

-- tensorflow import 안될 경우
pip install "numpy<2"

